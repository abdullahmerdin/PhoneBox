@model PhoneBox.Entities.PhoneNumber
<form method="post" asp-action="Update" asp-controller="PhoneNumbers">
    <div class="card card-primary m-3">
        <div class="card-header">
            <h3 class="card-title">Numara Güncelle</h3>
        </div>

        <div class="card-body" style="display: block;">
            <div class="form-group">
                <label asp-for="AppUser">Kullanıcı</label>
                <input type="text" asp-for="AppUser" class="form-control" placeholder="@Model.AppUser.FirstName @Model.AppUser.LastName">
            </div>
            <div class="form-group">
                <label asp-for="Number">Numara</label>
                <input type="text" asp-for="Number" class="form-control" placeholder="@Model.Number">
            </div>
        </div>
        <div class="card-footer">

            <a asp-action="GetAll" asp-controller="PhoneNumbers" class="btn btn-secondary col-2">Geri Dön</a>
            <input type="submit" value="Numara Güncelle" class="btn btn-success col-2 float-right">
        </div>
    </div>
</form>