@model AddPhoneNumberVM
<form method="post" asp-action="Add" asp-controller="PhoneNumbers">
    <div class="card card-primary m-3">
        <div class="card-header">
            <h3 class="card-title">Numara Ekle</h3>
        </div>

        <div class="card-body" style="display: block;">
            @*<div class="form-group">
                <label asp-for="UserId">Kullanıcı</label>
                <input type="text" asp-for="UserId" class="form-control">
            </div>*@
            <div class="form-group">
                @Html.Label("Kullanıcı")
                @Html.DropDownListFor(x => x.UserId, (List<SelectListItem>)ViewBag.userList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Number">Numara</label>
                <input type="text" asp-for="Number" class="form-control">
            </div>
        </div>
        <div class="card-footer">

            <a asp-action="GetAll" asp-controller="PhoneNumbers" class="btn btn-secondary col-2">Geri Dön</a>
            <input type="submit" value="Numara Ekle" class="btn btn-success col-2 float-right">
        </div>
    </div>
</form>