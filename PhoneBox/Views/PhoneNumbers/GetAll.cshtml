@model IQueryable<PhoneBox.Entities.PhoneNumber>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Kullanıcı</th>
                                    <th>Numara</th>
                                    <th>Oluşturulma Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var number in Model)
                                {
                                    <tr>
                                        <td>@number.Id</td>
                                        <td>@number.AppUser</td>
                                        <td>@number.Number</td>
                                        <td>@number.CreatedTime</td>
                                        <td>
                                            <a class="btn btn-info"@Html.ActionLink("Update", "Update", new { id = number.Id })>Güncelle</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger" @Html.ActionLink("Delete", "Delete", new { id = number.Id })>SİL</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Kullanıcı</th>
                                    <th>Numara</th>
                                    <th>Oluşturulma Tarihi</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
