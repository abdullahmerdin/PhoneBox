@using Microsoft.AspNetCore.Mvc.Localization
@*@model PhoneBox.Entities.PhoneNumber*@
@inject IViewLocalizer localizer
<form method="post" asp-action="Update" asp-controller="PhoneNumbers">
    @*@Html.HiddenFor(x => x.AppUserId)*@
    @*@Html.HiddenFor(x => x.CreatedTime)*@
    <div class="card card-primary m-3">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Numara Güncelle"]</h3>
        </div>

        <div class="card-body" style="display: block;">
            <div class="form-group">
                <label class="form-control">@ViewBag.appUser.FirstName @ViewBag.appUser.LastName</label>
            </div>
            <div class="form-group">
                @*<label asp-for="Number">@localizer["Numara"]</label>*@
                @*<input type="text" asp-for="Number" class="form-control" placeholder="@Model.Number">*@
            </div>
        </div>
        <div class="card-footer">

            <a asp-action="GetAll" asp-controller="PhoneNumbers" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
            <button type="submit" class="btn btn-success col-2 float-right">@localizer["Numara Güncelle"] </button>
        </div>
    </div>
</form>