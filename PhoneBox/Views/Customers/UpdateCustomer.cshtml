@using Microsoft.AspNetCore.Mvc.Localization
@model PhoneBox.Entities.Customer
@inject IViewLocalizer localizer
<form method="post" asp-action="UpdateCustomer" asp-controller="Customers">
    <div class="card card-primary m-3">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Müşteri Güncelle"]</h3>
        </div>

        <div class="card-body" style="display: block;">
            <div class="form-group">
                <input type="text" asp-for="FirstName" class="form-control" placeholder="@localizer["Adı"]">
            </div>
            <div class="form-group">
                <input type="text" asp-for="LastName" class="form-control" placeholder="@localizer["Soyadı"]">
            </div>
            <div class="form-group">
                <input type="text" asp-for="Address" class="form-control" placeholder="@localizer["Adresi"]">
            </div>
            <div class="form-group">
                <input type="text" asp-for="CompanyName" class="form-control" placeholder="@localizer["Şirketi"]">
            </div>
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control" placeholder="@localizer["E-posta"]">
            </div>
            <div class="form-group">
                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="@localizer["Telefon"]">
            </div>
            <div class="form-group">
                <input type="text" asp-for="JobTitle" class="form-control" placeholder="@localizer["Unvan"]">
            </div>
            
        </div>
        <div class="card-footer">

            <a asp-action="GetAllCustomers" asp-controller="Customers" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
            <button type="submit" class="btn btn-success col-2 float-right">@localizer["Güncelle"] </button>
        </div>
    </div>
    </div>
</form>